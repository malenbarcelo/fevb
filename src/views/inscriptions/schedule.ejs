<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="main-title"><%= title.toUpperCase() %></div>

<div class="<%= selectionSummary.length > 0 ? 'mt-5- mb-20' : '' %>">
    <% selectionSummary.forEach(s => { %>
        <div class="ta-c mb-5"><b><%= s.description.toUpperCase() %></b></div>     
    <% }) %>
</div>

<% if (allowsBulkInsc == 0) { %>
    <div class="sch-price"><b><%= 'PRECIO (ARS): ' %></b><%= price.toLocaleString('es-AR',{minimumFractionDigits: 2,maximumFractionDigits: 2}) %></div>
<% } %>



<div class="fs-16 fw-b ta-c mt-25">HORARIOS DISPONIBLES</div>

<form action="/inscripciones/<%= branchAlias %>/cronograma" method="POST">
    <div class="inputs-column mt-20">
        <div class="div-input">
            <select  class="input-std w-350 max-w-90p pad-12-0 schedule-data" name="selectDate" id="selectDate">
                <option value="">--- Seleccione una opción --- </option>
                <% scheduleOptions.forEach(option => { %>
                    <option value="<%= option.id %>"><%= option.shiftsDescription %></option>                 
                <% }) %>
            </select>
        </div>
    </div>

    <div class="general-error m-a mt-15" id="error">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Debe seleccionar una fecha para continuar
    </div>

    <div class="w-700 max-w-90p m-a mt-25 ta-c">
        <div class="mb-20 ta-c fs-16"><b><%= courseMethodology == 'sync' ? 'HORARIO DE CURSADA' : 'INICIO DE CURSADA' %></b></div>
        
        <div class="mb-5 lh-1-5" id="selectedDates"><b>TEÓRICO: </b>Seleccione una fecha de inicio para definir los horarios de cursada del Teórico</div>
        <div class="sch-days" id="days"></div>
        
        <% if (hasPractical) { %>
            <% if (courseMethodology == 'sync') { %>
                <div><b>PRÁCTICO: </b>El horario de la Práctica será coordinado con el instructor</div>
                <% } else { %>
                    <div><b>PRÁCTICO: </b>Las prácticas son presenciales. Los horarios serán publicados en la plataforma web</div>
            <% } %>
            
        <% } %>
    
    </div>

    <div class="mt-20"><%- include('../partials/contactPopup') %></div>

    <div class="buttons-column mt-25 mb-15">
        <button type="submit" id="continueButton" class="btn-std w-350 max-w-90p pad-11-0">
            CONTINUAR
        </button>

        <button type="button" id="backButton" class="btn-std w-350 max-w-90p pad-11-0" onclick="history.back()">
            ATRÁS
        </button>
    </div>
</form>

<!-- loader -->
<div class="loader ld-std" id="loader">
    <div class="ld-content lt-m"></div>
</div>

<!----------SCRIPTS---------->
<script type="module" src="/js/inscriptions/schedule.js?v=<%= Date.now() %>"></script>













