<%- include('../../partials/head') %>
<%- include('../../partials/header') %>

<div class="fs-19 fw-b mt-30_0 flex-r ai-c jc-c"><%= examName.toUpperCase() %></div>
<div class="fs-15 mt-15 mb-30 flex-r ai-c jc-c">Tus respuestas</div>

<div class="answers">

    <% questionData.forEach(d => { %>

        <div class="answer">
            
            <!--- question --->
            <div class="fw-b fs-14"><%= d.question_number + '. ' + d.question %></div>

            <!--- images --->
            <% if (d.question_image != '') { %>
                <div class="question-image-container">
                    <img src="/images/examsImages/<%= d.course_type + '/' + d.question_image %>" alt="FEVB" class="question-image">
                </div>                
            <% } %>

            <!--- option --->
            <% d.question_options.forEach(o => { %>
                <div class="answer-box <%= o.selected ? o.boxCss : '' %>">
                    <div class="flex-r cg-3 ai-c">
                        <input type="radio" <%= o.selected ? 'checked' : '' %> disabled>
                        <label class="fs-13"><%= o.option_reference + '. ' + o.option_text %></label>
                        <div class="fs-15 fc-green ml-5 <%= o.checkCss %>"><i class="fa-solid fa-check"></i></div>
                        <div class="fs-13 fc-error ml-5 <%= o.errorCss %>"><i class="fa-solid fa-x"></i></div>
                    </div>
                </div>
            <% }) %>
        </div>
    
    <% }) %>

</div>

<!--- buttons -->
<a href="/examenes/pendientes">
    <div class="btn-std w-250 m-a pad-10-0 mt-30">Volver al men√∫</div>
</a>

<a href="/examenes/rehacer">
    <div class="btn-std w-250 m-a pad-10-0 mt-15">Rehacer examen</div>
</a>

<a href="/examenes">
    <div class="btn-std w-250 m-a pad-10-0 mt-15 mb-30">Salir</div>
</a>

